{
  "name": "@ucp/config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./env": "./src/env-utils/index.ts",
    "./env/schema": "./_generated/base-env.ts",
    "./path": "./src/path-utils/index.ts"
  },
  "files": [
    "src",
    "_generated"
  ],
  "scripts": {
    "check": "tsc -p tsconfig.json --noEmit",
    "generate-env-schema": "TSX_DISABLE_CACHE=1 node --import tsx scripts/generate-env-schema.ts",
    "postinstall": "pnpm run generate-env-schema",
    "generate-shovel-config": "TSX_DISABLE_CACHE=1 node --import tsx src/infra/shovel-config.ts"
  },
  "dependencies": {
    "@indexsupply/shovel-config": "catalog:",
    "@ucp/contracts": "workspace:*",
    "abitype": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
