{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localprotocol.xyz/schemas/commerce/merchant.json",
  "name": "xyz.localprotocol.commerce.merchant",
  "version": "2026-01-11",
  "title": "Merchant Capability",
  "description": "Merchant search and retrieval capability for menu discovery.",
  "type": "object",
  "$defs": {
    "context": {
      "allOf": [
        {
          "$ref": "https://ucp.dev/schemas/shopping/types/context.json"
        },
        {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "description": "Background context for semantic search (e.g., 'family-friendly restaurants', 'late-night delivery')."
            }
          }
        }
      ],
      "description": "Location and market context for merchant operations. Extends base context with 'intent' for semantic search."
    },
    "search_request": {
      "type": "object",
      "required": [
        "query"
      ],
      "properties": {
        "query": {
          "type": "string",
          "description": "Free-text search query for merchant name."
        },
        "context": {
          "$ref": "https://ucp.dev/schemas/commerce/merchant.json#/$defs/context"
        },
        "filters": {
          "$ref": "https://ucp.dev/schemas/commerce/types/merchant_search_filters.json"
        },
        "pagination": {
          "$ref": "https://ucp.dev/schemas/shopping/types/pagination.json#/$defs/request"
        }
      }
    },
    "search_response": {
      "type": "object",
      "required": [
        "ucp",
        "merchants"
      ],
      "properties": {
        "ucp": {
          "$ref": "https://ucp.dev/schemas/ucp.json#/$defs/response"
        },
        "merchants": {
          "type": "array",
          "items": {
            "$ref": "https://ucp.dev/schemas/commerce/types/merchant.json"
          },
          "description": "Merchants matching the search criteria."
        },
        "pagination": {
          "$ref": "https://ucp.dev/schemas/shopping/types/pagination.json#/$defs/response"
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "https://ucp.dev/schemas/shopping/types/message.json"
          },
          "description": "Errors, warnings, or informational messages about the search results."
        }
      }
    },
    "get_merchant_response": {
      "type": "object",
      "required": [
        "ucp"
      ],
      "properties": {
        "ucp": {
          "$ref": "https://ucp.dev/schemas/ucp.json#/$defs/response"
        },
        "merchant": {
          "$ref": "https://ucp.dev/schemas/commerce/types/merchant.json",
          "description": "The merchant associated with the requested ID."
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "https://ucp.dev/schemas/shopping/types/message.json"
          },
          "description": "Errors, warnings, or informational messages about the requested merchant."
        }
      }
    }
  }
}