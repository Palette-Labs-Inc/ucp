{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/types/delivery_quote.json",
  "title": "Delivery Quote",
  "description": "Quoted delivery price with expiration.",
  "type": "object",
  "required": [
    "quote_id",
    "expires_at",
    "price"
  ],
  "properties": {
    "quote_id": {
      "type": "string",
      "description": "Internal quote identifier."
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC 3339 expiration timestamp for this quote."
    },
    "price": {
      "$ref": "https://ucp.dev/schemas/shopping/types/price.json",
      "description": "Estimated delivery fee."
    },
    "pickup_eta": {
      "type": "string",
      "format": "date-time",
      "description": "Estimated pickup time."
    },
    "dropoff_eta": {
      "type": "string",
      "format": "date-time",
      "description": "Estimated dropoff time."
    }
  }
}