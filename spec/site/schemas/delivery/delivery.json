{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/delivery.json",
  "name": "xyz.localprotocol.delivery",
  "version": "2026-01-19",
  "title": "Delivery Request Capability",
  "description": "Delivery request capability. Defines delivery creation and retrieval resources.",
  "type": "object",
  "$defs": {
    "delivery": {
      "$ref": "https://ucp.dev/schemas/delivery/types/delivery.json"
    },
    "delivery_request": {
      "$ref": "https://ucp.dev/schemas/delivery/types/delivery_request.json"
    },
    "request_delivery": {
      "title": "Request Delivery",
      "description": "Inputs required to create a delivery from a quote.",
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "quote_id"
          ],
          "properties": {
            "quote_id": {
              "type": "string",
              "description": "Associated delivery quote identifier."
            },
            "external_id": {
              "type": "string",
              "description": "Optional external identifier for idempotency or correlation."
            }
          }
        },
        {
          "$ref": "https://ucp.dev/schemas/delivery/delivery.json#/$defs/delivery_request"
        }
      ]
    },
    "response_delivery": {
      "title": "Response Delivery",
      "description": "Response wrapper for delivery operations.",
      "type": "object",
      "required": [
        "ucp",
        "delivery"
      ],
      "properties": {
        "ucp": {
          "$ref": "https://ucp.dev/schemas/ucp.json#/$defs/response"
        },
        "delivery": {
          "$ref": "https://ucp.dev/schemas/delivery/delivery.json#/$defs/delivery",
          "description": "Delivery details."
        }
      }
    }
  }
}