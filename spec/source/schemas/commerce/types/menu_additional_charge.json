{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localprotocol.xyz/schemas/commerce/types/menu_additional_charge.json",
  "title": "Menu Additional Charge",
  "description": "An additional charge applied to orders from a menu.",
  "type": "object",
  "properties": {
    "charge_type": {
      "type": "string",
      "description": "Charge type identifier."
    },
    "flat_charge": {
      "type": "object",
      "properties": {
        "currency_code": {
          "type": "string",
          "description": "ISO 4217 currency code."
        },
        "amount": {
          "type": "number",
          "description": "Charge amount in major units."
        }
      }
    },
    "percentage_charge": {
      "type": "object",
      "properties": {
        "decimal_value": {
          "type": "number",
          "minimum": 0,
          "description": "Charge percentage as a decimal."
        }
      }
    }
  }
}
