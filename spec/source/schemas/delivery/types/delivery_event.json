{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localprotocol.xyz/schemas/delivery/types/delivery_event.json",
  "title": "Delivery Event",
  "description": "Delivery lifecycle event payload.",
  "type": "object",
  "required": ["event_id", "event_type", "created_at", "delivery"],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique event identifier."
    },
    "event_type": {
      "type": "string",
      "description": "Delivery lifecycle event type aligned with delivery status values.",
      "enum": [
        "pending",
        "pickup",
        "pickup_complete",
        "dropoff",
        "delivered",
        "canceled",
        "returned",
        "ongoing"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Event creation timestamp in RFC 3339 format."
    },
    "delivery": {
      "$ref": "delivery.json",
      "description": "Current delivery state."
    }
  }
}
