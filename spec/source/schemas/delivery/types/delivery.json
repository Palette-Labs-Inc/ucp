{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/types/delivery.json",
  "title": "Delivery",
  "description": "Delivery object with status updates.",
  "type": "object",
  "required": ["id", "status", "quote_id", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Delivery identifier."
    },
    "quote_id": {
      "type": "string",
      "description": "Associated delivery quote identifier."
    },
    "status": {
      "type": "string",
      "description": "Delivery status.",
      "enum": [
        "pending",
        "pickup",
        "pickup_complete",
        "dropoff",
        "delivered",
        "canceled",
        "returned",
        "failed"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC 3339 creation timestamp."
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC 3339 last update timestamp."
    },
    "pickup": {
      "$ref": "delivery_location.json",
      "description": "Pickup location."
    },
    "dropoff": {
      "$ref": "delivery_location.json",
      "description": "Dropoff location."
    },
    "price": {
      "$ref": "https://ucp.dev/schemas/shopping/types/price.json",
      "description": "Delivery fee."
    },
    "pickup_eta": {
      "type": "string",
      "format": "date-time",
      "description": "Estimated pickup time."
    },
    "dropoff_eta": {
      "type": "string",
      "format": "date-time",
      "description": "Estimated dropoff time."
    },
    "tracking": {
      "$ref": "tracking.json",
      "description": "Tracking details when available."
    },
    "courier": {
      "$ref": "courier.json",
      "description": "Courier details when available."
    }
  }
}
