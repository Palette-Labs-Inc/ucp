{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localprotocol.xyz/schemas/shared/types/pickup_location.json",
  "title": "Pickup Location",
  "description": "A pickup location for on-demand delivery.",
  "type": "object",
  "ucp_shared_request": true,
  "allOf": [
    {
      "$ref": "../../shopping/types/postal_address.json"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID specific to this pickup location.",
          "ucp_request": "optional"
        },
        "name": {
          "type": "string",
          "description": "Pickup location name (e.g., store name)."
        },
        "location": {
          "$ref": "location.json",
          "description": "Geographic coordinates for this address."
        }
      },
      "required": [
        "id"
      ]
    }
  ]
}
