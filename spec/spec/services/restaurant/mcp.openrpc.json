{
  "openrpc": "1.3.2",
  "info": {
    "title": "UCP Restaurant Service",
    "version": "2026-01-11",
    "description": "Canonical MCP/JSON-RPC interface for UCP Restaurant service. Schema references are logical pointers - actual payload shape is determined by negotiated capabilities.\n\n**Endpoint Resolution:** This spec defines methods only. The endpoint URL MUST be obtained from the merchant's discovery profile at `/.well-known/ucp` under `services[\"xyz.localprotocol.restaurant\"].mcp.endpoint`. The server entry below is a placeholder for tooling compatibility."
  },
  "servers": [
    {
      "name": "merchant",
      "url": "{endpoint}",
      "description": "Merchant-provided endpoint from UCP discovery profile",
      "variables": {
        "endpoint": {
          "default": "https://merchant.example.com/ucp/mcp",
          "description": "Obtain from /.well-known/ucp â†’ services[\"xyz.localprotocol.restaurant\"].mcp.endpoint"
        }
      }
    }
  ],
  "methods": [
    {
      "name": "create_checkout",
      "summary": "Create a checkout",
      "params": [
        {
          "name": "checkout",
          "required": true,
          "schema": {
            "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
          }
        }
      ],
      "result": {
        "name": "checkout",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
        }
      }
    },
    {
      "name": "get_checkout",
      "summary": "Get checkout",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "result": {
        "name": "checkout",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
        }
      }
    },
    {
      "name": "update_checkout",
      "summary": "Update checkout",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "checkout",
          "required": true,
          "schema": {
            "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
          }
        }
      ],
      "result": {
        "name": "checkout",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
        }
      }
    },
    {
      "name": "complete_checkout",
      "summary": "Complete checkout and place order",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "payment",
          "required": false,
          "schema": {
            "$ref": "https://ucp.dev/schemas/shopping/payment.json"
          }
        },
        {
          "name": "idempotency_key",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "result": {
        "name": "checkout",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
        }
      }
    },
    {
      "name": "cancel_checkout",
      "summary": "Cancel checkout",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "idempotency_key",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "result": {
        "name": "checkout",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/checkout.json"
        }
      }
    },
    {
      "name": "get_merchant_menus",
      "summary": "Get merchant menus",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "response",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/list_response"
        }
      }
    },
    {
      "name": "search_menu",
      "summary": "Search menu items",
      "params": [
        {
          "name": "request",
          "required": true,
          "schema": {
            "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/search_request"
          }
        }
      ],
      "result": {
        "name": "response",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/search_response"
        }
      }
    },
    {
      "name": "list_menu_items",
      "summary": "List menu items",
      "params": [],
      "result": {
        "name": "response",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/list_response"
        }
      }
    },
    {
      "name": "get_menu_item",
      "summary": "Get menu item",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "response",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/get_item_response"
        }
      }
    },
    {
      "name": "get_item_modifier_groups",
      "summary": "Get item modifier groups",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "response",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/get_item_modifier_groups_response"
        }
      }
    },
    {
      "name": "get_modifier_item",
      "summary": "Get modifier item",
      "params": [
        {
          "name": "id",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "response",
        "schema": {
          "$ref": "https://localprotocol.xyz/schemas/restaurant/menu.json#/$defs/get_modifier_item_response"
        }
      }
    }
  ]
}
