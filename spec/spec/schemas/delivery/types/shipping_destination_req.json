{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/types/shipping_destination_req.json",
  "title": "Shipping Destination Request",
  "description": "Shipping destination.",
  "type": "object",
  "allOf": [
    {
      "$ref": "postal_address.json"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID specific to this shipping destination."
        },
        "location": {
          "$ref": "location.json",
          "description": "Geographic coordinates for this address."
        }
      }
    }
  ]
}
