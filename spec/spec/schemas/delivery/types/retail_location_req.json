{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/types/retail_location_req.json",
  "title": "Retail Location Request",
  "description": "A pickup location (retail store, locker, etc.).",
  "type": "object",
  "required": [
    "name"
  ],
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "description": "Location name (e.g., store name)."
    },
    "address": {
      "$ref": "postal_address.json",
      "description": "Physical address of the location."
    },
    "location": {
      "$ref": "location.json",
      "description": "Geographic coordinates for this location."
    }
  }
}
