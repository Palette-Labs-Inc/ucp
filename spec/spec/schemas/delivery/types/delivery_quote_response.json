{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/types/delivery_quote_response.json",
  "title": "Delivery Quote Response",
  "description": "Quote details for an on-demand delivery request.",
  "type": "object",
  "required": [
    "quote_id"
  ],
  "properties": {
    "quote_id": {
      "type": "string",
      "description": "Delivery quote identifier."
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "Quote expiration timestamp."
    },
    "totals": {
      "type": "array",
      "items": {
        "$ref": "total_resp.json"
      },
      "description": "Quoted totals for the delivery."
    }
  }
}
