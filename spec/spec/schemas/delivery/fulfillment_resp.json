{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyz.localprotocol/schemas/delivery/fulfillment.json",
  "name": "xyz.localprotocol.delivery.fulfillment",
  "version": "2026-01-19",
  "title": "Delivery Fulfillment Extension Response",
  "description": "Extends shopping fulfillment with a delivery quote identifier on checkout.fulfillment.",
  "type": "object",
  "$defs": {
    "checkout": {
      "title": "Checkout with Delivery Quote Identifier Response",
      "description": "Checkout extended with a delivery quote identifier inside fulfillment.",
      "allOf": [
        {
          "$ref": "../shopping/fulfillment_resp.json#/$defs/checkout"
        },
        {
          "type": "object",
          "properties": {
            "fulfillment": {
              "type": "object",
              "oneOf": [
                {
                  "type": "object",
                  "required": [
                    "quote_id"
                  ],
                  "properties": {
                    "quote_id": {
                      "type": "string",
                      "description": "Delivery quote identifier for this checkout."
                    }
                  }
                },
                {
                  "type": "object",
                  "required": [
                    "delivery_request"
                  ],
                  "properties": {
                    "delivery_request": {
                      "$ref": "types/delivery_request.json",
                      "description": "Delivery request details when no quote is provided."
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    }
  }
}
