{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localprotocol.xyz/schemas/restaurant/types/fulfillment_method.update_req.json",
  "title": "Restaurant Fulfillment Method Update Request",
  "description": "A fulfillment method for pickup or on-demand delivery in restaurant checkout.",
  "oneOf": [
    {
      "title": "Pickup Fulfillment Method Update Request",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique fulfillment method identifier."
        },
        "destinations": {
          "type": "array",
          "description": "Available pickup locations.",
          "items": {
            "$ref": "../../shopping/types/retail_location_req.json"
          }
        },
        "selected_destination_id": {
          "type": [
            "string",
            "null"
          ],
          "description": "ID of the selected destination."
        }
      },
      "not": {
        "required": [
          "delivery"
        ]
      }
    },
    {
      "title": "On-Demand Delivery Fulfillment Method Update Request",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "id",
        "delivery"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique fulfillment method identifier."
        },
        "delivery": {
          "$ref": "../../delivery/types/delivery_inputs_req.json",
          "description": "Required delivery inputs for on-demand delivery."
        }
      }
    }
  ]
}
