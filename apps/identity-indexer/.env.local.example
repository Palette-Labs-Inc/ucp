# --- postgres ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=shovel
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# --- shovel ---
ETH_RPC_URL=http://anvil:8545
SHOVEL_START_BLOCK=0
SHOVEL_IMAGE=indexsupply/shovel:latest

# --- indexer ---
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/shovel
INDEXER_POLL_INTERVAL_MS=3000
INDEXER_BATCH_SIZE=100

# Indexer API
INDEXER_API_PORT=4010
INDEXER_AGENT_HOST_BASE=localhost
INDEXER_UCP_VERSION=2026-01-11

# Optional: proxy for tools that can't resolve subdomains
INDEXER_AGENT_PROXY_PORT=4020